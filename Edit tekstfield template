import javax.swing.JButton;
import javax.swing.JFrame;
import java.awt.*;
import javax.swing.JTextField;

public class PageCreateGame {
    PageCreateGame(){
        /* JFrame is a top level container (window)
         * where we would be adding our button
         */
        JFrame frame = new JFrame();

        Font myFont = new Font("Arial", Font.PLAIN, 40);

        // Creating Button
        JTextField a = new JTextField("Team 1");
        JTextField b = new JTextField ("Team 2");
        JButton c = new JButton("+");
        JButton d = new JButton("START");
        JButton e = new JButton("Recommended rules");

        a.setFont(myFont);
        b.setFont(myFont);
        c.setFont(myFont);
        d.setFont(new Font("Arial", Font.BOLD, 40));
        e.setFont(new Font("Arial", Font.ITALIC, 30));



        /* This method specifies the location and size
         * of button. In method setBounds(x, y, width, height)
         * x,y) are cordinates from the top left
         * corner and remaining two arguments are the width
         * and height of the button.
         */
        a.setBounds(200,200,200, 100);
        b.setBounds(200,300,200, 100);
        c.setBounds(200, 400, 200, 100);
        d.setBounds(200, 700, 200, 150);
        e.setBounds(100, 1000, 400, 150);

        //Adding button onto the frame
        frame.add(a);
        frame.add(b);
        frame.add(c);
        frame.add(d);
        frame.add(e);

        // Setting Frame size. This is the window size
        frame.setSize(800,1200);

        frame.setLayout(null);
        frame.setVisible(true);

        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);

    }

    public static void main(String[] args) {
        new PageCreateGame();
    }
